
<%= @ride.attraction.name %>
<%= @ride.attraction.tickets %>
<%= @ride.attraction.min_height %>
<%= @ride.attraction.happiness_rating %>
<%= @ride.attraction.nausea_rating %>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %> 
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.submit "Go on this ride" %>
    <% end %>
<% end %>